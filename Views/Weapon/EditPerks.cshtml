@model Permissions.ViewModels.WeaponPerks

<h1>Permissions</h1>
<br />
<div class="card">
    <div id="viewAll" class="card-body table-responsive">
        <form asp-controller="Weapon" method="post" asp-action="EditPerks" class="d-inline">
            <input asp-for="@Model.WeaponId" type="hidden" />
            <table class="table table-striped" id="permissionTable">
                <thead>
                    <tr>
                        <th>
                            Perk 
                        </th>
                        <th>
                            Status
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Perks.Count(); i++)
                    {
                        <tr>
                            <td>
                                <input asp-for="@Model.Perks[i].PerkId" type="hidden" />
                                <input asp-for="@Model.Perks[i].PerkName" type="hidden" />
                                @Model.Perks[i].PerkName
                            </td>
                            <td>
                                <div class="form-check m-1">
                                    <input asp-for="@Model.Perks[i].PerkIsSelected" class="form-check-input" />
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="col-sm-12" style="padding: 20px 20px 0px 0px">
                <button type="submit" id="save" class="btn btn-primary">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>