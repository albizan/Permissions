@model Permissions.ViewModels.UserRoles;

<h3>Manage Roles for @Model.Email</h3>
<h5>Id: @Model.Id</h5>
<br />
<div class="card">

    <div id="viewAll" class="card-body table-responsive">
        <form asp-controller="UserRoles" method="post" asp-action="Edit" asp-route-id="@Model.Id" class="d-inline">
            <input asp-for="@Model.Id" type="hidden" />
            <input asp-for="@Model.Email" type="hidden" />
            <table class="table table-striped" id="userRolesTable">
                <thead>
                    <tr>
                        <th>
                            Role
                        </th>
                        <th>
                            Status
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @for (int i = 0; i < Model.Roles.Count(); i++)
                    {
                        <tr>
                            <td>
                                <input asp-for="@Model.Roles[i].RoleName" type="hidden" />
                                @Model.Roles[i].RoleName
                            </td>
                            <td>
                                <div class="form-check m-1">
                                    <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="col-sm-12" style=" padding: 20px 20px 0px 0px">
                <button type="submit" id="save" class="btn btn-primary">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>